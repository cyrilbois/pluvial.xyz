{
  "name": "@pluvial/pluvial.xyz",
  "license": "MIT",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "clean": "rm -rf .svelte-kit .vercel_build_output build functions workers-site",
    "start:deno": "deno run --allow-env --allow-read --allow-net build/index.js"
  },
  "workspaces": [
    "plugins"
  ],
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^1.0.0",
    "@sveltejs/adapter-cloudflare-workers": "^1.0.0",
    "@sveltejs/adapter-netlify": "^1.0.0",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/adapter-vercel": "^1.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@ziglang/cli": "^0.0.11",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "mdsvex": "^0.10.6",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-adapter-deno": "^0.8.2",
    "svelte-check": "^2.9.2",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-zig": "^0.0.11"
  },
  "dependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "flexsearch": "0.7.21"
  },
  "overrides": {
    "zx": "^4.3.0"
  },
  "pnpm": {
    "overrides": {
      "zx": "^4.3.0"
    }
  }
}
