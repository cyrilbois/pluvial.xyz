{
  "name": "@pluvial/pluvial.xyz",
  "license": "MIT",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "predev": "./build-metadata.sh",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "prebuild": "./build-metadata.sh",
    "preview": "svelte-kit preview",
    "start-deno": "deno run --allow-env --allow-read --allow-net build/index.js",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "clean": "rm -rf .svelte-kit .vercel_build_output build functions workers-site"
  },
  "workspaces": [
    "plugins",
    "scripts"
  ],
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "next",
    "@sveltejs/adapter-cloudflare-workers": "next",
    "@sveltejs/adapter-netlify": "next",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/adapter-vercel": "next",
    "@sveltejs/kit": "next",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.3.0",
    "mdsvex": "^0.9.8",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "svelte": "^3.44.3",
    "svelte-adapter-deno": "^0.5.0"
  },
  "dependencies": {
    "@fontsource/fira-mono": "^4.5.0"
  }
}
